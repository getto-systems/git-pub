#!/usr/bin/env sh

git_wipe_deleted_branch_main(){
  local refname

  git fetch pub --prune
  for refname in $(git branch --format="%(refname)" | grep ref/heads/); do
    if [ -z "$(git branch -r --list "pub/${refname#refs/heads/}")" ]; then
      git br -d "${refname#refs/heads/}"
    fi
  done
}

git_wipe_deleted_branch_main "$@"
